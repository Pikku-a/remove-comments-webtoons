{

  "manifest_version": 2,
  "name": "Remove webtoon comments",
  "version": "1.0",

  "description": "Removes comments from webtoons.com",

  "icons": {
    "48": "rwc.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.webtoons.com/*"],
      "js": ["remove-comments.js"]
    }
  ]

}